{
  "manifest_version": 3,
  "name": "VidSlice",
  "version": "1.0.0",
  "description": "Download video sequences from links or detected pages.",
  "permissions": ["activeTab", "downloads", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "./src/popup/index.html",
    "default_icon": "./images/logo-128.png"
  },
  "icons": {
    "16": "./images/logo-16.png",
    "48": "./images/logo-48.png",
    "128": "./images/logo-128.png",
    "512": "./images/logo-512.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content/content.js"]
    }
  ],
  "background": {
    "scripts": ["./dist/index.js"]
  },
  "options_page": "dist/popup/popup.html"
}
